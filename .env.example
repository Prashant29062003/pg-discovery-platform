# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# This file documents all environment variables
# For actual values, create .env.local (DO NOT COMMIT)

# ============================================
# AUTHENTICATION (Clerk)
# ============================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_xxxxx
CLERK_SECRET_KEY=sk_live_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# ============================================
# DATABASE (Neon PostgreSQL)
# ============================================
# Get from: https://console.neon.tech → Project → Connection string
# Format: postgresql://user:password@host:port/dbname?sslmode=require
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# ============================================
# IMAGE HOSTING (Cloudinary)
# ============================================
# Get from: https://cloudinary.com/console/settings/account
# Public key (can be exposed to frontend)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Private keys (keep secret, server-side only)
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Upload preset name (must be created in Cloudinary dashboard)
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=pg_images

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=https://your-domain.com
NODE_ENV=production

# ============================================
# VERCEL SPECIFIC (Auto-configured)
# ============================================
# These are automatically set by Vercel deployment
# VERCEL=1
# VERCEL_URL=your-project.vercel.app
# VERCEL_ENV=production
# 2. Copy your Cloud Name from the dashboard
# 3. Generate API Key and API Secret
# 4. Create an unsigned upload preset named "pg_images" in Settings > Upload


# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_NAME=PG Discovery Platform
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
