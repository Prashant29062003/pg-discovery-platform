<mjml>
  <mj-body background-color="#f8f9fa">
    <!-- Header Section -->
    <mj-section background-color="#ffffff" padding="20px 0">
      <mj-column>
        <mj-text align="center" font-size="24px" font-weight="bold" color="#2c3e50" font-family="Arial, sans-serif">
          ğŸ  New Enquiry Received
        </mj-text>
        <mj-text align="center" font-size="18px" color="#7f8c8d" font-family="Arial, sans-serif">
          {{pgName}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Visitor Information -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="20px" font-weight="bold" color="#2c3e50" font-family="Arial, sans-serif">
          ğŸ‘¤ Visitor Information
        </mj-text>
        <mj-divider border-color="#ecf0f1" border-width="2px" />
        
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Name:</strong> {{visitorName}}
        </mj-text>
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Email:</strong> {{visitorEmail}}
        </mj-text>
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Phone:</strong> {{visitorPhone}}
        </mj-text>
        {{#occupation}}
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Occupation:</strong> {{occupation}}
        </mj-text>
        {{/occupation}}
        {{#roomType}}
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Room Type:</strong> {{roomType}}
        </mj-text>
        {{/roomType}}
        {{#moveInDate}}
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif">
          <strong>Move-in Date:</strong> {{moveInDate}}
        </mj-text>
        {{/moveInDate}}
      </mj-column>
    </mj-section>

    <!-- Message Section -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="20px" font-weight="bold" color="#2c3e50" font-family="Arial, sans-serif">
          ğŸ’¬ Message
        </mj-text>
        <mj-divider border-color="#ecf0f1" border-width="2px" />
        <mj-text font-size="16px" color="#34495e" font-family="Arial, sans-serif" line-height="1.6">
          {{message}}
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Action Buttons -->
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text align="center" font-size="18px" font-weight="bold" color="#2c3e50" font-family="Arial, sans-serif">
          ğŸš€ Quick Actions
        </mj-text>
        
        <mj-button href="tel:{{visitorPhone}}" background-color="#27ae60" color="#ffffff" font-size="16px" font-weight="bold" border-radius="8px" padding="12px 24px" font-family="Arial, sans-serif">
          ğŸ“ Call Now
        </mj-button>
        
        <mj-button href="mailto:{{visitorEmail}}" background-color="#3498db" color="#ffffff" font-size="16px" font-weight="bold" border-radius="8px" padding="12px 24px" font-family="Arial, sans-serif">
          âœ‰ï¸ Email Reply
        </mj-button>
        
        <mj-button href="https://wa.me/91{{visitorPhone}}" background-color="#25d366" color="#ffffff" font-size="16px" font-weight="bold" border-radius="8px" padding="12px 24px" font-family="Arial, sans-serif">
          ğŸ’¬ WhatsApp
        </mj-button>
      </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section background-color="#ecf0f1" padding="20px">
      <mj-column>
        <mj-text align="center" font-size="14px" color="#7f8c8d" font-family="Arial, sans-serif">
          This enquiry was submitted via PG Discovery Platform
        </mj-text>
        <mj-text align="center" font-size="12px" color="#95a5a6" font-family="Arial, sans-serif">
          Received at {{timestamp}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
